<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select tenant to generate their payment report"
        android:textColor="@color/PrimaryColor"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/SearchTenant"
        android:maxLines="1"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:drawableRight="@drawable/ic_seearch"
        android:paddingRight="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:hint="Search anything"
        android:layout_marginBottom="20dp"
        android:background="@drawable/customalert_edittextstyling"
       >
    </EditText>
    <ListView android:id="@+id/Tenatlists"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice">
    </ListView>
</LinearLayout>
